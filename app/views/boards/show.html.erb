<% flash.each { |type, msg| %>
  <div style="color: <%= type == "notice" ? "green" : ""%>">
    <%= msg %>
  </div>
<% } %>

<h1>
  <%= @the_board.name %>
</h1>

<hr>

<h2>Add a new post</h2>

<form action="/insert_post" method="post">
  <div>
    <label for="title_box">Title</label>
    <input type="text" id="title_box" name="query_title"></input>
  </div>
  <div>
    <label for="body_box">Body</label>
    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>
  <div>
    <label for="expire_box">Expires on</label>
    <input type="date" id="expire_box" name="query_expires_on"></input>
  </div>
  <input type="hidden" id="board_id_box" name="query_board_id" value="<%= @the_board.id %>">
  <button>Add post</button>
</form>

<hr>

<h2>Active posts</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>

    <% @the_board.posts.active.order("expires_on asc").each { |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%b %e, %Y") %></td>
        <td><%= post.expires_on.strftime("%b %e, %Y") %></td>
      </tr>
    <% } %>

  </tbody>
</table>

<h2>Expired posts</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>

    <% @the_board.posts.expired.each { |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%b %e, %Y") %></td>
        <td><%= post.expires_on.strftime("%b %e, %Y") %></td>
      </tr>
    <% } %>

  </tbody>
</table>
